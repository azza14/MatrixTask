@model IEnumerable<MatrixTask.Models.Product>

@{
    ViewBag.Title = "Index";
}

<!-- heading-banner start -->
<div class="heading-banner" style="margin-top:20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="~/Products/Index">Home</a></li>
                    <li class="active">Index</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- heading-banner end -->

<p>
    @Html.ActionLink("Create New", "Create", "Products", new { @class = "btn btn-primary" })
</p>
<div class="container ">
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        <p class="form-group col-md-4">
            @Html.Editor("SearchString")
            <input type="submit" value="Search" class="btn btn-default " />
        </p>
    }


    <table class="table table-responsive  table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayName("Category Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th> Actions</th>
            </tr>

            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Code }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Code }, new { @class = "btn btn-danger" })


                    </td>
                </tr>
            }

    </table>
</div>